<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Quizie - {% block title %}{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('main_css') }}
    {% endblock %}
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary text-white">
        <div class="container">
            <a class="navbar-brand title" id="logo" href="/">Quizie</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {% if app.request.attributes.get('_route') == 'accueil_index' %}active{% endif %}">
                        <a class="nav-link" href="{{ path("accueil_index") }}">Accueil</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item {% if app.request.attributes.get('_route') == 'quiz_creerQuiz' %}active{% endif %}">
                            <a class="nav-link" href="{{ path("quiz_creerQuiz") }}">Créer un quiz</a>
                        </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user-circle account"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            {% if not app.user %}
                                <a class="dropdown-item" href="{{ path("security_connexion") }}">Se connecter</a>
                            {% else %}
                                <a class="dropdown-item" href="{{ path("security_mesInfos") }}">Mes infos</a>
                                <a class="dropdown-item" href="#">Mes quiz</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path("security_deconnexion") }}">Se déconnecter</a>
                            {% endif %}
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div id="content">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('main_js') }}
{% endblock %}
</body>
</html>
