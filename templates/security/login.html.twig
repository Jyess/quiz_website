{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="col-lg-8 mx-auto">
        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

        {% if error %}
{#          <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
            <div class="alert alert-danger">L'adresse email ou le mot de passe est incorrect.</div>
        {% endif %}

        {{ form_start(login, {'attr' : { 'class' : ''}}) }}

        {{ form_row(login.email, {'value' : last_email, 'attr' : { 'class' : 'form-control'} } ) }}
        {{ form_row(login.mot_de_passe, {'attr' : { 'class' : 'form-control'} } ) }}
        {{ form_row(login._csrf_token, {'value' : csrf_token('authenticate')}) }}

        <div class="checkbox my-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

        {{ form_row(login.connecter, {'attr' : { 'class' : 'btn btn-primary'} } ) }}

        {{ form_end(login) }}

    </div>
{% endblock %}
