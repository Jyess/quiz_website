{% extends 'base.html.twig' %}

{% block title %}Tous mes quiz
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title text-center mb-4">Tous mes quiz créés</h1>

		<div class="list-group">
			{% for unQuiz in mesQuiz %}
				<a href="{{ path("quiz_modifierQuiz", { 'idQuiz' : unQuiz.id }) }}" class="list-group-item list-group-item-action">
					{{ unQuiz.intitule }}
				</a>
			{% endfor %}

			{% if mesQuiz is empty %}
				<div class="alert alert-secondary" role="alert">
					<div class="row">Vous n'avez pas encore créé de quiz.</div>
				</div>

				<a class="btn btn-secondary" href="{{ path('quiz_creerQuiz') }}" role="button">Créer un quiz maintenant</a>
			{% endif %}
		</div>
	</div>
{% endblock %}
