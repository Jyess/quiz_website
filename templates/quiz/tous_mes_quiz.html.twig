{% extends 'base.html.twig' %}

{% block title %}Mes quiz
{% endblock %}

{% block body %}
	<h1 class="title text-center mb-4">Tous mes quiz créés</h1>

	<div class="list-group text-break">
		{% for unQuiz in mesQuiz %}
			<div class="row">
				<div class="col-lg-10">
					<a title="Faire le quiz" href="{{ path("quiz_afficherQuiz", { 'idQuiz' : unQuiz.id }) }}" class="list-group-item list-group-item-action">
						{{ unQuiz.intitule }}
					</a>
				</div>

				<div class="row col-lg-2 my-auto mx-auto">
					<div class="col">
						<a href="{{ path("quiz_modifierQuiz", { 'idQuiz' : unQuiz.id }) }}" title="Modifier le quiz">
							<i class="fas fa-pen"></i>
						</a>
					</div>
					<div class="col">
						<a class="text-danger supprimerQuiz" href="{{ path("quiz_deleteQuiz", { 'idQuiz' : unQuiz.id }) }}" title="Supprimer le quiz">
							<i class="fas fa-trash"></i>
						</a>
					</div>
					<div class="col">
						<a class="text-info statQuiz" href="{{ path("quiz_voirStat", { 'idQuiz' : unQuiz.id }) }}" title="Statistiques du quiz">
							<i class="far fa-chart-bar"></i>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}

		{% if mesQuiz is empty %}
			<div class="alert alert-secondary" role="alert">
				<div class="row">Vous n'avez pas encore créé de quiz.</div>
			</div>

			<a class="btn btn-secondary" href="{{ path('quiz_creerQuiz') }}" role="button">Créer un quiz maintenant</a>
		{% endif %}
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('quiz_js') }}
{% endblock %}
