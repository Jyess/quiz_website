{% extends 'base.html.twig' %}

{% block title %}Créer un quiz{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title text-center">Création un quiz</h1>

        {{ form_start(quiz_formulaire) }}

        {{ form_row(quiz_formulaire.intitule, {'label' : 'Nom du quiz', 'attr' : { 'class' : 'form-control'} }) }}

        <div>
            <label class="mt-2">&Eacute;tat du quiz</label>
            {{ form_widget(quiz_formulaire.etat) }}
            {{ form_help(quiz_formulaire.etat, {'help_attr' : { 'class' : 'font-italic'} }) }}
        </div>

        <div class="row">
            <div class="col">
                {{ form_label(quiz_formulaire.plageHoraireDebut, 'Plage horaire de début', {'label_attr': {'class': 'optional d-none'}}) }}
                {{ form_widget(quiz_formulaire.plageHoraireDebut, {'attr' : { 'class' : 'optional d-none'} }) }}
            </div>

            <div class="col">
                {{ form_label(quiz_formulaire.plageHoraireFin, 'Plage horaire de fin', {'label_attr': {'class': ' optional d-none'}}) }}
                {{ form_widget(quiz_formulaire.plageHoraireFin, {'attr' : { 'class' : 'optional d-none'} }) }}
            </div>
        </div>

        {{ form_help(quiz_formulaire.plageHoraireFin, {'help_attr' : { 'class' : 'optional d-none font-italic'} }) }}

        {{ form_row(quiz_formulaire.envoyer, {'attr' : { 'class' : 'btn btn-primary mt-3'} } ) }}

        {{ form_end(quiz_formulaire) }}

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('quiz') }}
{% endblock %}
